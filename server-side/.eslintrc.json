{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "prettier/@typescript-eslint", "plugin:prettier/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "no-unused-vars": "warn",
        "no-console": 2,
        "comma-dangle": ["error", "never"],
        "indent": ["error", "tab"],
        "lineBreak-style": ["error", "windows"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"]
    }
}
